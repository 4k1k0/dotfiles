#Subir volumen
"amixer set Master 5%+"
	XF86AudioRaiseVolume
#Bajar volumen
"amixer set Master 5%-"
	XF86AudioLowerVolume
#Mute  volumen
"amixer set Master toggle"
	XF86AudioMute
#Play/Pause
"mpc toggle"
	XF86AudioPlay
###############################
#Captura de pantalla
"xfce4-screenshooter"
	Print
#Bloquear pantalla
"i3lock -i ~/.lock.png"
	XF86ScreenSaver
#Brillo de pantalla +
"xbacklight -inc 10"
	XF86MonBrightnessUp
#Brillo de pantalla -
"xbacklight -dec 10"
	XF86MonBrightnessDown
