[alias]
	lg = log --oneline --decorate --all --graph
	s = status -sb
	oops = checkout --
	db = branch -D
	ch = checkout
	bl = branch --list
	unadd = reset HEAD --
        ri = "!f() { git rebase -i HEAD~\"$1\"; }; f"
        ub = "!f() { git fetch origin && git rebase origin/\"$1\"; }; f"
        drb = "!f() { git branch -d -r origin/\"$1\"; }; f"
[core]
	editor = vim
[user]
	name = Wako
[color]
        branch = auto
        diff = auto
        status = auto

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold

[color "status"]
        added = yellow
        changed = green
        untracked = cyan
